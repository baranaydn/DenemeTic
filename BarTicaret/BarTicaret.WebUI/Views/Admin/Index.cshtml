@model IReadOnlyList<BarTicaret.Application.Products.ProductDto>
@{
    ViewData["Title"] = "Yönetim";
}
<h2>Yönetim</h2>
<p><a class="btn btn-primary" asp-action="Create">Yeni Ürün</a></p>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<table class="table">
    <thead><tr><th>Ad</th><th>Fiyat</th><th>Stok</th><th>Kategori</th><th>Materyaller</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Ad</td>
                <td>@p.Fiyat</td>
                <td>@p.Adet</td>
                <td>@p.Kategori</td>
                <td>@string.Join(", ", p.Materyaller)</td>
                <td>
                    <form method="post" asp-action="Delete">
                        <input type="hidden" name="id" value="@p.Id" />
                        <button class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
